<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:context="com.csci412.classfinder.SchedulesActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/title"
        android:layout_below="@+id/app_bar"
        android:text="TODO: edit this xml to be a drop-down of schedules and move gridviews to other xml, store classes in schedule names and build matrixes every click"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_below="@+id/title"
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <include layout="@layout/schedule_list" />
    </FrameLayout>

    <EditText
        android:id="@+id/scheduleEditText"
        android:layout_width="wrap_content"
        android:hint="New Schedule Name here"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout"
        android:layout_toLeftOf="@+id/newScheduleButton"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/newScheduleButton"
        android:layout_alignParentRight="true"
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout"/>

</RelativeLayout>
